{
  "name": "dory",
  "version": "0.1.11",
  "description": "Markdown blogging platform with automatic publishing to Surge.sh, using advanced JavaScript/HTML5 techniques for a much loved UX.",
  "scripts": {
    "test": "ava tests/**/*.test.js --tap | tap-nyan && npm run lint",
    "lint": "stylelint public/sass/*.scss public/sass/**/*.scss public/sass/**/**/*.scss && xo public/js/**/*.js",
    "config": "babel core/cli/config.js | node",
    "build": "babel core/cli/build.js | node",
    "clean": "babel core/cli/clean.js | node",
    "start": "babel server/default.js | node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Wildhoney/Dory.git"
  },
  "xo": {
    "space": 4,
    "esnext": true,
    "extends": "xo-react",
    "rules": {
      "padded-blocks": "off",
      "babel/object-curly-spacing": [
        2,
        "always"
      ],
      "babel/array-bracket-spacing": "off",
      "no-unused-vars": [
        1
      ],
      "default-case": "off",
      "no-unused-expressions": "off",
      "no-case-declarations": "off",
      "react/prop-types": "off",
      "react/jsx-indent": "off",
      "react/jsx-space-before-closing": "off",
      "react/no-danger": "off",
      "react/jsx-no-bind": "off"
    }
  },
  "ava": {
    "files": [
      "tests/*.test.js"
    ],
    "babel": "inherit",
    "require": [
      "babel-register",
      "./tests/helpers/setup-browser-env.js"
    ]
  },
  "keywords": [
    "blog",
    "blogging",
    "writing",
    "write",
    "universal",
    "isomorphic"
  ],
  "author": "Adam Timberlake <adam.timberlake@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Wildhoney/Dory/issues"
  },
  "homepage": "https://github.com/Wildhoney/Dory#readme",
  "dependencies": {
    "array.from": "^1.0.0",
    "axios": "^0.9.1",
    "document-ready-promise": "^3.0.1",
    "es6-promise": "^3.0.2",
    "express": "^4.13.4",
    "github": "^0.2.4",
    "ini": "^1.3.4",
    "js-base64": "^2.1.9",
    "keo": "^4.0.5",
    "marked": "^0.3.5",
    "mime": "^1.3.4",
    "moment": "^2.11.2",
    "mustache": "^2.2.1",
    "newline-remove": "^1.0.2",
    "object-hash": "^1.1.2",
    "ordinal": "^1.0.0",
    "pluralize": "^1.2.1",
    "ramda": "^0.19.1",
    "react-document-title": "^2.0.1",
    "react-dom": "^0.14.7",
    "react-router": "^2.0.0",
    "redux": "^3.3.1",
    "seamless-immutable": "^5.1.0",
    "sorty": "^1.2.2",
    "yaml-front-matter": "^3.4.0",
    "yaml-js": "^0.1.3"
  },
  "devDependencies": {
    "autoprefixer-loader": "^3.2.0",
    "ava": "git+https://github.com/sindresorhus/ava.git",
    "babel": "^6.5.2",
    "babel-cli": "^6.6.4",
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "css-loader": "^0.23.1",
    "enzyme": "^2.0.0",
    "eslint-config-xo": "^0.12.0",
    "eslint-config-xo-react": "^0.5.0",
    "eslint-plugin-react": "^4.2.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-minifier": "^1.1.1",
    "jsdom": "^8.1.0",
    "json-loader": "^0.5.4",
    "node-sass": "^3.4.2",
    "node-yaml-config": "0.0.4",
    "react-addons-test-utils": "^0.14.7",
    "sass-loader": "^3.1.2",
    "shelljs": "^0.6.0",
    "sinon": "^1.17.3",
    "style-loader": "^0.13.0",
    "stylelint": "^5.0.0",
    "stylelint-config-standard": "^4.0.1",
    "tap-nyan": "0.0.2",
    "webpack": "^2.1.0-beta.4",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-hot-middleware": "^2.7.1",
    "xo": "^0.13.0"
  }
}
